}

.ui.button.icon.mini.compact:hover i.icon:before {
    color: @uiHoveredPositiveTextColor;
}

.ui.action.input > button:hover i.search:before {
    color: @brightBlue;
}

.ui.action.input > button:hover i.remove:before {
    color: @uiHoveredNegitveTextColor;
