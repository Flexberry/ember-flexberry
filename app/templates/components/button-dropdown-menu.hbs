{{#each buttons as |button|}}
  {{#unless button.disabled}}
    <div role="button" class="item {{button.class}}"
      onclick={{unless button.buttons (action sendButtonAction button.action)}}>
      {{#if button.buttons}}
        {{button-dropdown-menu
          buttons=button.buttons
          sendButtonAction=(action "sendButtonAction")
        }}
        <i class="right dropdown icon"></i>
      {{/if}}
      <div class="menu-item">
        {{#if button.icon}}
          <i class={{button.icon}}></i>
        {{/if}}
        <span class="text">{{button.text}}</span>
      </div>
    </div>
  {{/unless}}
{{/each}}