<div class=" content">
  <!--div class="description">
    <div class="list-group"-->
      <table class="ui selectable celled table"
        ><thead
          ><tr
            ><th style="width:36px;align:center"><i class='large hide icon' title='Не отображать столбцы'></i></th
            ><th>Направление сортировки</th
            ><th>Приоритет при сортировке</th
            ><th>Название столбца</th
            ><th style="width:72px;text-align:center"><i class='large sort icon' title='Установить порядок по умолчанию'></i></th
          ></tr
        ></thead
        ><tbody id='colsConfigtableRows'>
{{#each modelForDOM as |colDesc n|}}
{{!--log 'name='colDesc.name ' sortOrderNot='colDesc.sortOrderNot ' sortOrderAsc='colDesc.sortOrderAsc ' sortOrderDesc='colDesc.sortOrderDesc--}}
{{!--debugger--}}
<tr id="{{colDesc.trId}}" propName='{{colDesc.propName}}'
          ><td><i id="{{colDesc.hideId}}" class='large {{if colDesc.hide 'hide' 'unhide'}} icon' colsConfigHidden=false {{action 'invertVisibility' n}}></i></td
          ><td  class="{{if colDesc.hide 'disabled' ''}}"
            ><select id='{{colDesc.sortOrderId}}' name="sortorder[{{colDesc.name}}]" {{action 'setSortOrder' n}}>
                <option selected='{{colDesc.sortOrderNot}}' value='0'>-</option>
                <option selected='{{colDesc.sortOrderAsc}}' value='1'>▲</option>
                <option selected='{{colDesc.sortOrderDesc}}' value='-1'>▼</option>
              </select
              ></td
            ><td class="{{if colDesc.hide 'disabled' ''}}"
            ><input id="{{colDesc.sortPriorityId}}" class='sortPriority' disabled="{{if colDesc.sortOrder '' 'disabled'}}" value='{{colDesc.sortPriority}}' type='input' style="{{if colDesc.sortOrder '' 'display:none'}}"
            {{action "setSortPriority" n on="focusOut"}} prevValue="{{colDesc.sortPriority}}"
            ></td
            ><td  class="{{if colDesc.hide 'disabled' ''}}">{{colDesc.name}}</td
            ><td class="{{if colDesc.hide 'disabled' ''}}"><nobr
              ><button {{action 'rowUp' n}} id="{{colDesc.rowUpId}}" onClick="">↑</button
              ><button {{action 'rowDown' n}}  id="{{colDesc.rowDownId}}" onClick="">↓</button></nobr
            ></td
          ></tr>
{{/each}}
        </tbody
        ><tfoot class="full-width"
          ><tr
          ><td colspan='6'
          ><div class="ui right floated button" {{action 'apply'}}>OK</div
            ><div class="ui"
              >Название настройки <input type='input' name='configName' placeholder='Введите название настройки'
              /><div class="ui small button" onClick="">Сохранить</div
            ></div
          ></td
          ></tr
      ></tfoot
      ></table>
    <!--/div>
  </div-->
</div>

