<div class="flexberry-colsconfig content">
      <table class="ui unstackable fixed selectable celled table"
        ><thead
          ><tr
          ><th class="show-columns" title='{{t "components.colsconfig-dialog-content.dont-show-columns"}}'><i class='large hide icon'></i></th
          ><th class="columns-order"><i class='large sort icon' title='{{t "components.colsconfig-dialog-content.columns-order"}}'></i></th
          ><th title='{{t "components.colsconfig-dialog-content.column-name"}}'>{{t "components.colsconfig-dialog-content.column-name"}}</th
          ><th class="sort-direction" title='{{t "components.colsconfig-dialog-content.sort-direction"}}'><nobr><i class="large sort content ascending icon"></i><i class="large sort content descending icon"></i></nobr></th
          ><th class="sort-priority" title="{{t "components.colsconfig-dialog-content.sort-priority"}}"><i class='large ordered list icon'></i></th
          ><th class="column-width" title="{{t "components.colsconfig-dialog-content.column-width"}}"><i class='large text width icon'></i></th
          ></tr
        ></thead
        ><tbody id='colsConfigtableRows'>
{{#each modelForDOM as |colDesc n|}}
          <tr id="{{colDesc.trId}}" propName='{{colDesc.propName}}'
            ><td><i id="{{colDesc.hideId}}" class='large {{if colDesc.hide 'hide' 'unhide'}} icon' colsConfigHidden=false {{action 'invertVisibility' n}}></i></td
            ><td class="{{if colDesc.hide 'disabled' ''}}">
              <button {{action 'rowUp' n}} id="{{colDesc.rowUpId}}" class="ui icon tiny button">
                <i class="chevron up icon"></i>
              </button
              ><button {{action 'rowDown' n}}  id="{{colDesc.rowDownId}}" class="ui icon tiny button no-margin">
                <i class="chevron down icon"></i>
              </button>
            </td
            ><td class="{{if colDesc.hide 'disabled' ''}}">{{colDesc.name}}</td
            ><td
              ><select class="ui compact dropdown selection icon button {{if colDesc.hide 'disabled' ''}}"  id='{{colDesc.sortOrderId}}' name="sortorder[{{colDesc.name}}]" {{action 'setSortOrder' n on='change'}}>
                <option selected='{{colDesc.sortOrderNot}}' value='0'>-</option>
                <option selected='{{colDesc.sortOrderAsc}}' value='1'>▲</option>
                <option selected='{{colDesc.sortOrderDesc}}' value='-1'>▼</option>
              </select
              ></td
            ><td class="{{if colDesc.hide 'disabled' ''}}">
              <div class="ui input {{if colDesc.hide 'disabled' ''}}">
                <input id="{{colDesc.sortPriorityId}}" size='2' class="sortPriority {{if colDesc.sortOrder '' 'hidden'}}" disabled="{{if colDesc.sortOrder '' 'disabled'}}" value='{{colDesc.sortPriority}}' type='input' style=""
                  {{action "setSortPriority" n on="focusOut"}} prevValue="{{colDesc.sortPriority}}">
              </div>
            </td
            ><td class="{{if colDesc.hide 'disabled' ''}}">
            <div class="ui input {{if (or colDesc.hide (not saveColWidthState)) 'disabled' ''}}">
            <input id="{{colDesc.columnWidthId}}" size='2' class="columnWidth" value='{{colDesc.columnWidth}}' type='input' {{action "widthChanged"  on="focusOut"}}
                  >
              </div>
            </td
          ></tr>
{{/each}}
        </tbody
        ><tfoot class="full-width"
          ><tr
          ><th colspan='5' style='text-align:right'>{{t "components.colsconfig-dialog-content.col-width-on"}}</th
            ><th>
              {{flexberry-checkbox
                class="toggle"
                value=saveColWidthState
              }}
            </th
          ></tr
          ><tr
            ><th colspan='6'>
              <div class="ui action input">
                <input id="columnConfigurtionSettingName" type='input' name='configName'
                  placeholder='{{t "components.colsconfig-dialog-content.enter-setting-name"}}' value='{{settingName}}'
                  {{action "setConfigName" n on="focusOut"}}>
                <div id="columnConfigurtionButtonSave" class="ui small button disabled" {{action 'saveColsSetting'}}>
                  {{t "components.colsconfig-dialog-content.save"}}
                </div>
              </div>
                <div id="columnConfigurtionButtonUse" class="ui right floated button" {{action 'apply'}}>{{t "components.colsconfig-dialog-content.use"}}</div>
            </th
          ></tr
        ></tfoot
      ></table>
</div>
