{{#if dropdown}}
  {{flexberry-dropdown
    placeholder=placeholder
    class="search"
    value=displayValue
    readonly=(if readonly "readonly")
    needChecksOnValue=false
    isSearch=true
    isSearchReadOnly=dropdownIsSearch
  }}
{{else}}
  <div class="ui fluid action input">
    {{input
      type="text"
      class=(concat "lookup-field " (if autocomplete "prompt"))
      placeholder=placeholder
      value=displayValue
      readonly=(if (or readonly (not autocomplete)) "readonly")
    }}
    <button
      class="ui {{if readonly " disabled"}} {{chooseButtonClass}} {{if (and modalIsStartToShow (not modalIsShow)) " loading disabled"}} button"
      {{action 'choose' chooseData}}
      onclick={{action 'chooseButtonClick'}}>
      {{{chooseText}}}
    </button>
    <button
      class="ui {{if readonly " disabled"}} {{removeButtonClass}} {{if (and modalIsStartToShow (not modalIsShow)) " disabled"}} button"
      {{action 'remove' removeData}}>
      {{{removeText}}}
    </button>
  </div>
{{/if}}
{{#if (and (not readonly) autocomplete)}}
  <div class="results"></div>
{{/if}}
