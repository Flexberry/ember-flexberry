{{#if titleIsBeforeIcon}}
  {{#if item.localeKey}}
    <span>{{t item.localeKey}}</span>
  {{else}}
    <span>{{item.title}}</span>
  {{/if}}
{{/if}}
{{#if item.icon}}
  <i class="{{item.icon}}"></i>
{{/if}}
{{#if (not titleIsBeforeIcon)}}
  {{#if item.localeKey}}
    <span>{{t item.localeKey}}</span>
  {{else}}
    <span>{{item.title}}</span>
  {{/if}}
{{/if}}

{{#each item.buttons as |button|}}
  <button
    class="ui {{if button.buttonClasses button.buttonClasses ""}} {{if button.iconAlignment button.iconAlignment ""}} button"
    title={{if button.buttonTitle button.buttonTitle}}
    disabled={{button.disabled}}
    {{action "itemButtonAction" button.buttonAction on="click" bubbles=false}}>
      {{#if button.iconClass}}
        <i class="{{button.iconClass}}"></i>
      {{/if}}
      {{if button.buttonName button.buttonName ''}}
  </button>
{{/each}}

{{#if hasSubitems}}
  <div class="{{if item.itemsAlignment item.itemsAlignment}} menu">
    {{#each item.items as |item|}}
      {{flexberry-menuitem item=item}}
    {{/each}}
  </div>
{{/if}}
{{yield}}
