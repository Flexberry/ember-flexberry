{{#each tabs as |item|}}
  <a class="{{concat flexberryClassNames.tab " " "tab" " " "item" " " item.class}}"
    title="{{item.caption}}"
    data-tab="{{item.selector}}"
    {{action "change" item.selector on="click"}}>
    {{#if item._hasIcon}}
      <i class="{{concat flexberryClassNames.tabIcon " " item.iconClass}}"></i>
    {{else}}
      {{item.caption}}
    {{/if}}
  </a>
{{/each}}
