<div class="ui top attached tabular menu dragscroll">
  {{#each tabs as |item|}}
    <button type="button" class={{concat flexberryClassNames.tab " " "tab" " " "item" " " item.class}}
      title={{item.caption}}
      draggable="false"
      data-tab={{item.selector}}
      {{action "change" item.selector on="click"}}>
      {{#if item._hasIcon}}
        <i class={{concat flexberryClassNames.tabIcon " " item.iconClass}}></i>
      {{else}}
        {{item.caption}}
      {{/if}}
    </button>
  {{/each}}
</div>
<div class="ui compact attached pointing top right dropdown link item">
  <i class="clone outline icon"></i>
  <i class="caret down icon"></i>
  <div class="menu">
    {{#each tabs as |item|}}
      <button type="button" class="item" data-tab={{item.selector}} {{action "change" item.selector on="click"}}>
        {{item.caption}}
      </button>
    {{/each}}
  </div>
</div>