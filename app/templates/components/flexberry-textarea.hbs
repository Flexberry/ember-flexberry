{{textarea
  value=value
  readonly=readonly
  required=required
  placeholder=placeholder
  rows=rows
  cols=cols
  disabled=disabled
  maxlength=maxlength
  selectionEnd=selectionEnd
  selectionStart=selectionStart
  selectionDirection=selectionDirection
  wrap=wrap
  autofocus=autofocus
  spellcheck=spellcheck
}}
