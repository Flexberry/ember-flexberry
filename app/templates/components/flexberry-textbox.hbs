{{#if this.readonly}}
  <Input
    @type={{this.type}}
    @value={{readonly this.value}}
    readonly="readonly"
    required={{this.required}}
    placeholder={{(if this.placeholder this.placeholder (t 'components.flexberry-textbox.placeholder'))}}
    maxlength={{this.maxlength}}
  />
{{else}}
  <Input
    @type={{this.type}}
    @value={{this.value}}
    required={{this.required}}
    placeholder={{(if this.placeholder this.placeholder (t 'components.flexberry-textbox.placeholder'))}}
    maxlength={{this.maxlength}}
  />
{{/if}}
