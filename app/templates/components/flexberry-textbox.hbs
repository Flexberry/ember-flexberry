{{#if readonly}}
  {{input
    type=type
    value=(readonly value)
    readonly="readonly"
    required=required
    placeholder=placeholder
    maxlength=maxlength
  }}
{{else}}
  {{input
    type=type
    value=value
    required=required
    placeholder=placeholder
    maxlength=maxlength
  }}
  {{#if voiceTypingIsActive}}
    <i role="button" class="circular microphone link icon" {{action "voiceTyping"}} />
  {{/if}}
{{/if}}