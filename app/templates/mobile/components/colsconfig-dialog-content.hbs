<div class="ui form {{appState.state}}">
  <div class="flexberry-colsconfig content">
    <div class="two fields unstackable">
      {{#if model.exportParams.isExportExcel}}
        <div class="field">
          <div class="ui button cols-config-apply small" {{action "apply"}}>{{t "components.colsconfig-dialog-content.export"}}</div>
        </div>
        <div class="field">
          {{flexberry-menu
            class="right floated"
            items=exportExcelItems
            onItemClick=(action "onExportMenuItemClick")
            editItemAction=editItemAction
            removeItemAction=removeItemAction
          }}
        </div>
      {{else}}
        <div class="field">
          <div class="ui button cols-config-apply small" {{action "apply"}}>{{if model.exportParams.isExportExcel (t "components.colsconfig-dialog-content.export") (t "components.colsconfig-dialog-content.use")}}</div>
        </div>
        <div class="field">
          {{flexberry-menu
            class="right floated"
            items=colsSettingsItems
            onItemClick=(action "onMenuItemClick")
            editItemAction=editItemAction
            removeItemAction=removeItemAction
          }}
        </div>
      {{/if}}
    </div>

    {{#if model.exportParams.isExportExcel}}
      <div class="field">
        {{flexberry-checkbox
          label=(t "components.colsconfig-dialog-content.det-separate-cols")
          value=model.exportParams.detSeparateCols
        }}
      </div>
      <div class="field">
        {{flexberry-checkbox
          label=(t "components.colsconfig-dialog-content.det-separate-rows")
          value=model.exportParams.detSeparateRows
        }}
      </div>
    {{else}}
      <div class="two fields unstackable">
        <div class="field">
          {{flexberry-field
            class="per-page-input"
            value=model.perPageValue
            label=(t "components.colsconfig-dialog-content.per-page")
          }}
        </div>
        <div class="field">
          <label>&nbsp;</label>
          {{flexberry-checkbox
            class="toggle"
            value=model.saveColWidthState
            label=(t "components.colsconfig-dialog-content.col-width-on")
          }}
        </div>
      </div>
    {{/if}}

    {{#each model.colDescs as |colDesc n|}}
      <div propName='{{colDesc.propName}}' class="colsconfig-prop">
        <div class="field {{if colDesc.hide "disabled"}}">
          {{#if model.exportParams.isExportExcel}}
            {{input class=(if colDesc.hide "disabled") value=colDesc.name}}
          {{else}}
            {{colDesc.name}}
          {{/if}}
        </div>

        {{!-- Сортировка --}}
        <div class="two fields unstackable">
          {{#unless colDesc.isHasMany}}
            <div class="sort-direction-cell field">
              <label>{{t "components.colsconfig-dialog-content.sort-direction-caption"}}</label>
              <div class="ui compact selection dropdown sort-direction-dropdown {{if colDesc.hide 'disabled'}}">
                <i class="dropdown icon"></i>
                <div class="default text">{{t "components.colsconfig-dialog-content.sort-direction-none"}}</div>
                <div class="menu">
                  <div class="item" data-value="0">{{t "components.colsconfig-dialog-content.sort-direction-none"}}</div>
                  <div class="item" data-value="1">{{t "components.colsconfig-dialog-content.sort-direction-asc"}}</div>
                  <div class="item" data-value="-1">{{t "components.colsconfig-dialog-content.sort-direction-desc"}}</div>
                </div>
              </div>
            </div>
          {{/unless}}
          {{!-- Приоритет --}}
          {{#if colDesc.sortOrder}}
            <div class="field">
              <label>{{t "components.colsconfig-dialog-content.sort-priority-caption"}}</label>
              <div class="ui input {{if colDesc.hide 'disabled' ''}}">
                {{input
                  class="sort-priority-input"
                  value=colDesc.sortPriority
                }}
              </div>
            </div>
          {{/if}}
        </div>

        {{!-- Ширина --}}
        <div class="field">
          <label>{{t "components.colsconfig-dialog-content.column-width-caption"}}</label>
          <div class="ui input {{if (or colDesc.hide (or model.exportParams.isExportExcel (or colDesc.fixed (not model.saveColWidthState)))) 'disabled' ''}}">
            {{input
              class="column-width-input"
              value=colDesc.columnWidth
            }}
          </div>
        </div>

        <div class="colsconfig-actions">
          <button {{action 'invertVisibility' n}} class="ui icon button"><i class='large {{if colDesc.hide 'hide' 'unhide'}} icon'></i></button>
          <button {{action 'rowUp' n}} class="ui icon button{{if (eq n 0) " disabled"}}"><i class="icon-guideline-arrow-long-up"></i></button>
          <button {{action 'rowDown' n}} class="ui icon button row-down-button no-margin{{if (eq colDesc model.colDescs.lastObject) " disabled"}}"><i class="icon-guideline-arrow-long-down"></i></button>
        </div>
      </div>
    {{/each}}

    {{ui-message
      type=type
      closeable=closeable
      visible=visible
      caption=caption
      message=message
    }}
    <a class="hidden download-anchor"></a>
  </div>
  {{#if lightboxIsOpen}}
    {{#modal-dialog
      title="Сохранение настройки"
      useOkButton=false
      useCloseButton=false
      close=(action set "lightboxIsOpen" false)
      settings=(hash
        context=".flexberry-sidepage.modal")
    }}
      <div class="field">
        {{flexberry-field
          class="setting-name-input fluid"
          value=model.settingName
          label="Наименованеи настройки"
        }}
      </div>

      <button class="ui button positive cols-config-save{{unless model.settingName " disabled"}}" {{action "saveColsSetting"}}>
        Сохранить настройку
      </button>
      <button class="ui button">
        Отмена
      </button>


    {{/modal-dialog}}
  {{/if}}
</div>
