<div class="field">
  <label>{{<%= caption %>}}</label>
  {{flexberry-groupedit
    componentName="<%= name %>GroupEdit"
    mainModelProjection=modelProjection
    modelProjection=modelProjection.attributes.<%= name %>
    content=model.<%= name %>
    readonly=<%= readonly %>
    orderable=false
    class=(if model.errors.<%= name %> "error")
    data-test-<%= entityName %>-<%= dashedName %>=true
  }}
  {{flexberry-validationmessage error=model.errors.<%= name %> pointing="pointing"}}
</div>
