<div class="field">
  <label><%= caption %></label>
  {{#if model.errors.<%= name %>}}
  <span style="color:red">{{model.errors.<%= name %>}}</span>
  {{/if}}
  {{
    flexberry-datepicker
    placeholder='(no value)'
    readonly=<%= readonly %>
    value=model.<%= name %>
    class=(if model.errors.<%= name %> 'error' '')
  }}
</div>
