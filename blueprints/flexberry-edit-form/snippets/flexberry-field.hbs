<div class="field">
  {{#if model.errors.<%= name %>}}
  <span style="color:red">
    {{model.errors.<%= name %>}}
  </span>
  {{/if}}
  {{
  flexberry-field
  placeholder='(no value)'
  readonly=<%= readonly %>
  required=true
  value=model.<%= name %>
  class=(if model.errors.<%= name %> 'error' '')
  label='<%= caption %>'
  }}
</div>
