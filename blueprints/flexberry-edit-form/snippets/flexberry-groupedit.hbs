  <div class="field">
    <label>{{<%= caption %>}}</label>
    {{flexberry-groupedit
      componentName="<%= name %>GroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.<%= name %>
      content=model.<%= name %>
      readonly=<%= readonly %>
      orderable=false
      class=(if (v-get validationObject<%= propertyMaster %> "<%= propertyName %>" "isInvalid") "error")
      data-test-<%= entityName %>-<%= dashedName %>=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject<%= propertyMaster %> "<%= propertyName %>" "message")}}
  </div>