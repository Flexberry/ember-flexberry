<div class="field">
    <label><%= caption %></label>
  {{#if model.errors.<%= name %>}}
      <span style="color:red">{{model.errors.<%= name %>}}</span>
  {{/if}}
  {{
  flexberry-lookup
  choose='showLookupDialog'
  remove='removeLookupValue'
  value=model.<%= name %>
  <%if(lookupValueField){%>displayAttributeName='<%= lookupValueField %>'<%}else{%><%}%>
  relationName='<%= name %>'
  projection='<%= projection %>'
  title='<%= caption %>'
  readonly=<%= readonly %>
  }}
</div>
