<div class="field">
  <label>{{<%= caption %>}}</label>
  {{flexberry-lookup
    choose="showLookupDialog"
    remove="removeLookupValue"
    value=model.<%= name %><% if (lookupValueField) { %>
    displayAttributeName="<%= lookupValueField %>"<% } %>
    relationName="<%= name %>"
    projection="<%= projection %>"
    title=(<%= caption %>)
    readonly=<%= readonly %>
  }}
  {{flexberry-validationmessage error=validationErrors.<%= name %> pointing="pointing"}}
</div>
