<div class="ui grid {{if model.errors.<%= name %> 'error' ''}}">
  <div class="ui two wide column right aligned middle aligned content">
    <label><%= caption %></label>
  </div>
  <div class="ten wide column">
    <span style="color:red">{{model.errors.<%= name %>}}</span>
    {{flexberry-textbox placeholder="(no value)" readonly=<%= readonly %> required=true value=model.<%= name %>}}
  </div>
  {{flexberry-validationmessage error=model.errors.<%= name %> pointing="pointing"}}
</div>
