{{#if isInAcceptanceTestMode}}
  {{outlet}}
  {{outlet "modal"}}
{{else}}
  {{#flexberry-sidebar
    class="inverted vertical main menu visible"
    settings=(hash
      closable=false
      dimPage=false
      onShow=(action "updateWidth")
      onHidden=(action "updateWidth")
    )
  }}

    {{flexberry-sitemap-guideline sitemap=sitemap class="flexberry-sitemap"}}
    <div class="sitebar-footer">
      <a {{action 'showModalSupport' "#example"}}
              class="item"
              target="_blank"
              title="Написать в техподдержку">
          Написать в техподдержку
      </a>
      <a class="item"
        href={{addonVersionHref}}
        target="_blank"
        title={{t "forms.application.sitemap.application-version.title"}}>
        {{t "forms.application.sitemap.application-version.caption" version=addonVersion}}
      </a>
    </div>

  {{/flexberry-sidebar}}
  <div class="bgw-fix">
    <div class="background-logo">
      <div class="ui top attached">
        <div class="ui attached menu">
          <div class="ui container flex-container">
            <a {{action 'toggleSidebar'}}
              class="launch icon item"
              title={{t "forms.application.header.menu.sitemap-button.title"}}>
              {{t "forms.application.header.menu.sitemap-button.caption"}}
              <i class="sidebar icon text-menu-show"><span class="text_menu ">{{t "forms.application.header.menu.show-menu.caption"}}</span><span class="text_menu hidden text-menu-hide">{{t "forms.application.header.menu.hide-menu.caption"}}</span></i>
              <i class="sidebar icon hidden text-menu-hide hidden-text"><span class="text_menu hidden-text">{{t "forms.application.header.menu.hide-menu.caption"}}</span></i>
            </a>
          </div>
        </div>
      </div>
      <a class="item logo"
        href="https://github.com/flexberry"
        target="_blank"
        title={{t "forms.application.sitemap.application-name.title"}}>
        <img class="ui centered image" src="assets/images/flexberry-logo.png" />
      </a>
      <a class="page-header-caption" href="https://github.com/flexberry">
        <span class="page-header-caption-app-name">{{t "application-name"}}</span>
        <span class="page-header-caption-logo">{{t "forms.application.sitemap.application-version.caption" version=addonVersion}}</span>
      </a>
      <div class="page-header-actions">
        some actions
        {{!-- {{flexberry-dropdown
          class="compact"
          items=locales
          value=i18n.locale
          placeholder=(t "forms.application.header.menu.language-dropdown.placeholder")
        }} --}}
      </div>
      <div class="page-header-userbar">
        <span id="fio">
            Имя Фамилия
        </span>
        <i class="dropdown icon"></i>
        <a id="ExitButton" class="exit-btn" href="javascript:void(0)" {{action "logout" on="click"}}>{{t "forms.application.header.logout.caption"}}</a>
      </div>
    </div>
  </div>
  <div id="example" class="pusher">
    <div class="ui form {{appState.state}}">
      <div class="bgw-opacity hidden"></div>
      <div class="full height">
        <div class="flexberry-content ui attached segment">
          <div class="ui main container">
            <div class="stackable grid container">
              {{outlet}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="ui main container">
    {{outlet "modal"}}
  </div>
  {{!-- <div class="ui vertical footer segment">
    <div class="ui container flex-container">
      <div class="ui text menu">
        <a class="brand item" href="#">
          {{t "forms.application.footer.application-name"}}
        </a>
        <div class="right item">
          <label style="margin-right: 5px;">
            {{t "forms.application.header.menu.user-settings-service-checkbox.caption"}}
          </label>
          {{flexberry-checkbox
            class="toggle"
            value=userSettingsService.isUserSettingsServiceEnabled
          }}
        </div>
        <div class="item lang">
          <label style="margin-right: 5px;">
            {{t "forms.application.header.menu.language-dropdown.caption"}}
          </label>
          {{flexberry-dropdown
            class="compact"
            items=locales
            value=i18n.locale
            placeholder=(t "forms.application.header.menu.language-dropdown.placeholder")
            settings=(hash direction="upward")
          }}
        </div>
        <div class="right menu">
          <a class="item"
            href={{addonVersionHref}}
            target="_blank"
            title={{t "forms.application.footer.application-version.title"}}>
              {{t "forms.application.footer.application-version.caption" version=addonVersion}}
