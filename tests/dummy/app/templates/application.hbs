<div class="ui grid page menu">
  <a class="brand item" href="#">Flexberry prototype written in Ember.js</a>
  <div class="right menu">
    <a {{action 'openDevCommit'}}
       id="app-version"
       class="item"
       title="It is version of ember-flexberry addon, which uses in this dummy application (npm version + commit sha). Click to open commit on GitHub.">
      {{app-version}}
    </a>

    {{#if session.isAuthenticated}}
      <div class="item">
        <i class="user icon"></i>
        {{session.data.authenticated.userName}}
      </div>
      <a {{ action 'invalidateSession' }} class="item">Sign out</a>
    {{else}}
      <div class="item">
        {{#link-to 'login' class="ui primary button"}}Sign in{{/link-to}}
      </div>
    {{/if}}
  </div>
</div>
<div class="ui grid page">
  <div class="four wide column">
    {{render "sitemap" sitemap}}
  </div>
  <div class="twelve wide column">
    {{outlet}}
    {{outlet 'modal'}}
  </div>
</div>
