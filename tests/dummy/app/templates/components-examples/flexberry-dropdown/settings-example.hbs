<h3 class="ui header">{{t "forms.components-examples.flexberry-dropdown.settings-example.caption"}}</h3>
<form class="ui form flexberry-vertical-form" role="form">
  <div class="field">
    {{#settings-example
      controllerProperties=this
      componentSettingsMetadata=componentSettingsMetadata
      componentTemplateText=componentTemplateText
    }}
      {{flexberry-dropdown
        items=(flexberry-enum "components-examples/flexberry-dropdown/settings-example/enumeration")
        value=model.enumeration
        placeholder=placeholder
        readonly=readonly
        class=class
        on=on
        allowReselection=allowReselection
        allowAdditions=allowAdditions
        hideAdditions=hideAdditions
        minCharacters=minCharacters
        match=match
        selectOnKeydown=selectOnKeydown
        forceSelection=forceSelection
        allowCategorySelection=allowCategorySelection
        direction=direction
        keepOnScreen=keepOnScreen
        context=context
        fullTextSearch=fullTextSearch
        preserveHTML=preserveHTML
        sortSelect=sortSelect
        showOnFocus=showOnFocus
        allowTab=allowTab
        transition=transition
        duration=duration
      }}
    {{/settings-example}}
  </div>
</form>

