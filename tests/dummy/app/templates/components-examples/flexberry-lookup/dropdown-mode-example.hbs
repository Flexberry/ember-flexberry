<h3 class="ui header">{{t "forms.components-examples.flexberry-lookup.dropdown-mode-example.caption"}}</h3>
<form class="ui form flexberry-vertical-form" role="form">
  <div class="field">
    {{flexberry-field
      value=minCharactersValue
      label=label
      placeholder=placeholder
      type=type
      change=(action "changeMinCharactersValue")
    }}
  </div>
  {{#if rerender}}
    <div class="field">
      <label>{{t "forms.components-examples.flexberry-lookup.dropdown-mode-example.lookupSearch"}}{{minCharacters}}</label>
      {{flexberry-lookup
        value=model.type
        projection="DropDownLookupExampleView"
        displayAttributeName="name"
        title="Master"
        relationName="type"
        choose=(action "showLookupDialog")
        remove=(action "removeLookupValue")
        updateLookupValue=(action "updateLookupValue")
        readonly=readonly
        lookupLimitPredicate=lookupCustomLimitPredicate
        dropdown=true
        dropdownIsSearch=true
        sorting="desc"
        minCharacters=minCharacters
      }}
    </div>
  {{/if}}
  <div class="field">
    <label>{{t "forms.components-examples.flexberry-lookup.dropdown-mode-example.lookup"}}</label>
    {{flexberry-lookup
      value=model.type
      projection="DropDownLookupExampleView"
      displayAttributeName="name"
      title="Master"
      relationName="type"
      choose=(action "showLookupDialog")
      remove=(action "removeLookupValue")
      updateLookupValue=(action "updateLookupValue")
      readonly=readonly
      lookupLimitPredicate=lookupCustomLimitPredicate
      dropdown=true
      sorting="desc"
      dropdownSettings=(hash direction="upward")
    }}
  </div>
</form>