<h3 class="ui header">{{t "forms.components-examples.flexberry-lookup.limit-function-example.caption"}}</h3>
<form class="ui form flexberry-vertical-form" role="form">
  <a href="https://flexberry.github.io/ru/ef3_flexberry-lookup.html#указание-функции-ограничения">
    {{t "forms.components-examples.docs-link"}}
  </a>
  <div class="field">
    {{flexberry-lookup
      value=model.type
      projection="LookupWithLimitFunctionExampleView"
      displayAttributeName="name"
      title=(t "forms.components-examples.flexberry-lookup.limit-function-example.titleLookup")
      relationName="type"
      choose=(action "showLookupDialog")
      remove=(action "removeLookupValue")
      updateLookupValue=(action "updateLookupValue")
      readonly=readonly
      lookupWindowCustomProperties=(action "getLookupFolvProperties")
      lookupLimitPredicate=lookupCustomLimitPredicate
      autocomplete=true
    }}
  </div>
</form>