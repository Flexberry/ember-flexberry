<h3 class="ui header">{{t "forms.components-examples.flexberry-lookup.limit-function-example.caption"}}</h3>

<div class="row">
  <table class="ui collapsing table">
    <thead>
      <tr>
        <th>{{t "forms.components-examples.flexberry-lookup.limit-function-example.fields-name"}}</th>
        <th>{{t "forms.components-examples.flexberry-lookup.limit-function-example.search-by-name"}}</th>
      </tr>
    </thead>
    <tbody>
      {{#each modelFieldsForSettingExclusion as |field|}}
        <tr>
          <td>{{t (concat "models.ember-flexberry-dummy-suggestion-type.projections.SettingLookupExampleView." field ".__caption__")}}</td>
          <td>
            {{flexberry-checkbox
              value=true
              onChange=(action 'selectExcludeField' field bubbles=false)
            }}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<form class="ui form flexberry-vertical-form" role="form">
  <div class="field">
    {{flexberry-lookup
      value=model.type
      projection="LookupWithLimitFunctionExampleView"
      displayAttributeName="name"
      title=(t "forms.components-examples.flexberry-lookup.limit-function-example.titleLookup")
      relationName="type"
      choose="showLookupDialog"
      remove="removeLookupValue"
      readonly=readonly
      excludeFromSearchColumns=excludeFromSearchColumnsTest
      lookupWindowCustomProperties=(action 'getLookupFolvProperties')
      lookupLimitPredicate=lookupCustomLimitPredicate
      autocomplete=true
    }}
  </div>
</form>
