<h3 class="ui header">{{t "forms.components-examples.flexberry-lookup.limit-function-through-dynamic-properties-example.caption"}}</h3>
<form class="ui form flexberry-vertical-form" role="form">
  <div class="field">
    {{flexberry-lookup
      value=model.type
      projection="LookupWithLimitFunctionExampleView"
      displayAttributeName="name"
      title=(t "forms.components-examples.flexberry-lookup.limit-function-example.titleLookup")
      relationName="type"
      choose=(action "showLookupDialog")
      remove=(action "removeLookupValue")
      readonly=readonly
      autocomplete=true
      dynamicProperties=dynamicProperties
    }}
  </div>
  <br>
  <button class="ui button" {{action 'firstLimitFunction' on="click"}}>
    {{concat (t "forms.components-examples.flexberry-lookup.limit-function-through-dynamic-properties-example.captionFirstLimitFunction") ": " firstLimitType}}
  </button>
  <button class="ui button" {{action 'secondLimitFunction' on="click"}}>
    {{concat (t "forms.components-examples.flexberry-lookup.limit-function-through-dynamic-properties-example.captionSecondLimitFunction") ": " secondLimitType}}
  </button>
  <button class="ui button" {{action 'clearLimitFunction' on="click"}}>
    {{t "forms.components-examples.flexberry-lookup.limit-function-through-dynamic-properties-example.captionClearLimitFunction"}}
  </button>
</form>
