<h3 class="ui header">{{t "forms.components-examples.flexberry-lookup.lookup-in-modal.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  <button class="ui button" {{action "showUiModal" "#example"}}>{{t "forms.components-examples.flexberry-lookup.lookup-in-modal-autocomplete.buttonModal"}}</button>
  <button class="ui button" {{action "showSecondModal"}}>{{t "forms.components-examples.flexberry-lookup.lookup-in-modal-autocomplete.buttonModalDouble"}}</button>
</form>

{{#ui-modal id="repeat-window"}}
  <div class="header">{{t "forms.components-examples.flexberry-lookup.lookup-in-modal.captionModal"}}</div>
  <div class="content">
    <div class="ui form flexberry-vertical-form">
      <div class="field">
        {{flexberry-lookup
          value=model.editor1
          relatedModel=model
          relationName="editor1"
          projection="ApplicationUserL"
          displayAttributeName="name"
          readonly=readonly
          choose=(action "showLookupDialog")
          remove=(action "removeLookupValue")
          autocomplete=true
        }}
      </div>
      <button class="ui button" {{action "hideModal"}}>{{t "forms.components-examples.flexberry-lookup.lookup-in-modal.buttonClose"}}</button>
    </div>
  </div>
{{/ui-modal}}
