<h3 class="ui header">{{t "forms.components-examples.flexberry-lookup.settings-example.caption"}}</h3>
<form class="ui form flexberry-vertical-form" role="form">
  <div class="field">
    {{#settings-example
      controllerProperties=this
      componentSettingsMetadata=componentSettingsMetadata
      componentTemplateText=componentTemplateText
      componentBlockOverflow="visible"
    }}
      {{flexberry-lookup
        placeholder=placeholder
        readonly=readonly
        value=model.type
        projection="SettingLookupExampleView"
        displayAttributeName="name"
        title=title
        relatedModel=model
        relationName="type"
        choose=(action "showLookupDialog")
        remove=(action "removeLookupValue")
        autocomplete=autocomplete
        autocompletePersistValue=autocompletePersistValue
        usePaginationForAutocomplete=usePaginationForAutocomplete
        maxResults=maxResults
        displayValue=model.lookupDisplayValue
        dropdown=dropdown
        dropdownIsSearch=dropdownIsSearch
        chooseText=chooseText
        removeText=removeText
        dropdownClass=dropdownClass
        chooseButtonClass=chooseButtonClass
        removeButtonClass=removeButtonClass
        multiselect=true
        showPreviewButton=showPreviewButton
        previewOnSeparateRoute=previewOnSeparateRoute
        previewFormRoute="ember-flexberry-dummy-suggestion-type-edit"
        preview=(action "previewLookupValue")
        updateLookupValue=(action "updateLookupValue")
        autocompleteDirection=autocompleteDirection
      }}
    {{/settings-example}}
  </div>
</form>