<form class="ui form flexberry-vertical-form" role="form">
  <a href="https://flexberry.github.io/ru/ef2_lookup-component.html#пользовательские-настройки-для-списка-в-lookup-е-componentname">
    {{t "forms.components-examples.docs-link"}}
  </a>
  <div class="field">
    {{flexberry-lookup
      componentName="UserSettingsExample"
      folvComponentName="ApplicationUserObjectlistView"
      readonly=readonly
      value=model.author
      projection="ApplicationUserL"
      displayAttributeName="name"
      relatedModel=model
      relationName="author"
      choose="showLookupDialog"
      remove="removeLookupValue"
      updateLookupValue=(action "updateLookupValue")
      notUseUserSettings=notUseUserSettings
      lookupWindowCustomProperties=(action "getLookupFolvProperties")
      disableHierarchicalMode=true
    }}
  </div>

  <div class="field">
    <button type="button" class="ui button" {{action "clearUserSetting"}}>
      {{t
        "forms.components-examples.flexberry-lookup.user-settings-example.clear-user-setting"
      }}
    </button>
    {{flexberry-checkbox
      value=notUseUserSettings
      label=(t
        "forms.components-examples.flexberry-lookup.user-settings-example.not-user-user-setting-caption"
      )
      readonly=readonly
    }}
  </div>
</form>