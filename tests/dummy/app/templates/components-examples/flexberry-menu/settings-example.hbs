<h3 class="ui header">{{t "forms.components-examples.flexberry-menu.settings-example.caption"}}</h3>
<form class="ui form flexberry-vertical-form" role="form">
  <div class="field">
    {{#settings-example
      controllerProperties=this
      componentSettingsMetadata=componentSettingsMetadata
      componentTemplateText=componentTemplateText
      componentBlockOverflow="visible"
    }}
    <div class={{menuPosition}}>
      {{flexberry-menu
        items=itemsLeft
        onItemClick=(action "onMenuItemClick")
        collapseMenuOnItemClick=collapseMenuOnItemClick
      }}
      {{flexberry-menu
        items=itemsRight
        onItemClick=(action "onMenuItemClick")
        collapseMenuOnItemClick=collapseMenuOnItemClick
      }}
      {{flexberry-menu
        items=itemsSubmenu
        onItemClick=(action "onMenuItemClick")
        collapseMenuOnItemClick=collapseMenuOnItemClick
      }}
    </div>
    {{/settings-example}}
  </div>
</form>
