{{flexberry-error error=error}}
<h3>{{t "forms.components-examples.flexberry-objectlistview.custom-filter.caption"}}</h3>

<div class="row">
  <table class="ui collapsing table">
    <thead>
      <tr>
        <th>{{t "forms.components-examples.flexberry-objectlistview.custom-filter.fields-name"}}</th>
        <th>{{t "forms.components-examples.flexberry-objectlistview.custom-filter.search-by-name"}}</th>
      </tr>
    </thead>
    <tbody>
      {{#each modelFieldsForSettingExclusion as |field|}}
        <tr>
          <td>{{t (concat "models." modelName ".projections." modelProjection.projectionName "." field ".__caption__")}}</td>
          <td>
            {{flexberry-checkbox
              value=true
              onChange=(action 'selectExcludeField' field bubbles=false)
            }}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<div class="row">
  {{flexberry-objectlistview
    content=model
    modelName="ember-flexberry-dummy-suggestion"
    modelProjection=modelProjection
    editFormRoute=editFormRoute
    createNewButton=false
    refreshButton=true
    enableFilters=true
    filters=filters
    applyFilters=(action "applyFilters")
    resetFilters=(action "resetFilters")
    componentForFilter=(action "componentForFilter")
    conditionsByType=(action "conditionsByType")
    filterButton=true
    filterText=filter
    filterByAnyWord=filterByAnyWord
    filterByAllWords=filterByAllWords
    filterByAnyMatch=(action 'filterByAnyMatch')
    beforeDeleteAllRecords=(action "beforeDeleteAllRecords")
    sorting=computedSorting
    orderable=true
    pages=pages
    perPageValue=perPageValue
    perPageValues=perPageValues
    recordsTotalCount=recordsTotalCount
    hasPreviousPage=hasPreviousPage
    hasNextPage=hasNextPage
    sortByColumn=(action "sortByColumn")
    addColumnToSorting=(action "addColumnToSorting")
    previousPage=(action "previousPage")
    gotoPage=(action "gotoPage")
    nextPage=(action "nextPage")
    colsConfigButton=false
    componentName="FOLVCustomFilterObjectListView"
    customButtons=customButtons
    toggleFilterByAnyWord='toggleFilterByAnyWord'
    toggleFilterByAllWords='toggleFilterByAllWords'
    showCheckBoxInRow=true
    deleteButton=true
  }}
</div>
