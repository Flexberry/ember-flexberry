{{flexberry-error error=error}}
<h3 class="ui header">{{t "forms.components-examples.flexberry-simpleolv.settings-example.caption"}}</h3>
<form class="ui form flexberry-vertical-form" role="form">
  <div class="field">
    {{#settings-example
      controllerProperties=this
      componentSettingsMetadata=componentSettingsMetadata
      componentTemplateText=componentTemplateText
    }}
      {{flexberry-simpleolv
        colsConfigButton=colsConfigButton
        exportExcelButton=exportExcelButton
        content=model
        modelName="ember-flexberry-dummy-suggestion"
        editFormRoute='ember-flexberry-dummy-suggestion-edit'
        modelProjection=modelProjection
        placeholder=placeholder
        readonly=readonly
        tableStriped=tableStriped
        allowColumnResize=allowColumnResize
        minAutoColumnWidth=minAutoColumnWidth
        columnsWidthAutoresize=columnsWidthAutoresize
        createNewButton=createNewButton
        deleteButton=deleteButton
        refreshButton=refreshButton
        defaultSortingButton=defaultSortingButton
        enableFilters=enableFilters
        filters=filters
        applyFilters=(action "applyFilters")
        resetFilters=(action "resetFilters")
        beforeDeleteAllRecords=(action "beforeDeleteAllRecords")
        filterButton=filterButton
        showCheckBoxInRow=showCheckBoxInRow
        showDeleteButtonInRow=showDeleteButtonInRow
        showEditButtonInRow=showEditButtonInRow
        showEditMenuItemInRow=showEditMenuItemInRow
        showDeleteMenuItemInRow=showDeleteMenuItemInRow
        rowClickable=rowClickable
        orderable=orderable
        singleColumnHeaderTitle=singleColumnHeaderTitle
        filterByAnyMatch=(action "filterByAnyMatch")
        filterText=filter
        filterByAnyWord=filterByAnyWord
        filterByAllWords=filterByAllWords
        sorting=computedSorting
        sortByColumn=(action "sortByColumn")
        addColumnToSorting=(action "addColumnToSorting")
        pages=pages
        perPageValue=perPageValue
        perPageValues=perPageValues
        recordsTotalCount=recordsTotalCount
        hasPreviousPage=hasPreviousPage
        hasNextPage=hasNextPage
        previousPage=(action "previousPage")
        gotoPage=(action "gotoPage")
        nextPage=(action "nextPage")
        componentName="SOLVSettingsExampleObjectListView"
        fixedHeader=fixedHeader
        }}
    {{/settings-example}}
  </div>
</form>
