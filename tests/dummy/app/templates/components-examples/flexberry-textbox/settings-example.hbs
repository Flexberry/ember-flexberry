<h3 class="ui header">{{t "forms.components-examples.flexberry-textbox.settings-example.caption"}}</h3>
<form class="ui form flexberry-vertical-form" role="form">
  <a href="https://flexberry.github.io/ru/ef2_edit-form-components.html#flexberry-textbox">
    {{t "forms.components-examples.docs-link"}}
  </a>
  {{#settings-example
    controllerProperties=this
    componentSettingsMetadata=componentSettingsMetadata
    componentTemplateText=componentTemplateText
    componentBlockOverflow="visible"
  }}
    {{flexberry-textbox
      class=class
      value=model.text
      placeholder=placeholder
      readonly=readonly
      maxlength=maxlength
    }}
  {{/settings-example}}
</form>
