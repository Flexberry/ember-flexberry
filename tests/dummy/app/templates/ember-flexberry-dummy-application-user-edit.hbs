<h3 class="ui header">{{t "forms.ember-flexberry-dummy-application-user-edit.caption"}}</h3>
<form class="ui form flexberry-vertical-form" role="form">
  {{ui-message
    type="success"
    closeable=true
    visible=showFormSuccessMessage
    caption=formSuccessMessageCaption
    message=formSuccessMessage
    onShow=(action "onSuccessMessageShow")
    onHide=(action "onSuccessMessageHide")
  }}
  {{ui-message
    type="error"
    closeable=true
    visible=showFormErrorMessage
    caption=formErrorMessageCaption
    message=formErrorMessage
    onShow=(action "onErrorMessageShow")
    onHide=(action "onErrorMessageHide")
  }}
  {{flexberry-error error=error}}
  <div class="field">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=validationErrors}}
    </div>
  </div>
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        {{#unless (and hasParentRoute (not saveBeforeRouteLeave))}}
          <button type="submit" class="ui button save-button" {{action "save"}}>{{t "forms.edit-form.save-button-text"}}</button>
        {{/unless}}
        {{#unless (and hasParentRoute (not saveBeforeRouteLeave))}}
          <button type="submit" class="ui button save-close-button" {{action "saveAndClose"}}>{{t "forms.edit-form.saveAndClose-button-text"}}</button>
        {{/unless}}
        {{#unless (and model.isNew (or (not hasParentRoute) (and hasParentRoute saveBeforeRouteLeave)))}}
          <button type="submit" class="ui button save-del-button" {{action "delete"}}>{{t "forms.edit-form.delete-button-text"}}</button>
        {{/unless}}
      {{/unless}}
      <button type="submit" class="ui button close-button" {{action "close"}}>{{t "forms.edit-form.close-button-text"}}--></button>
    </div>
  </div>
  <div class="field {{if validationErrors.name "error" ""}}">
    {{flexberry-field
      value=model.name
      label=(t "forms.ember-flexberry-dummy-application-user-edit.name-caption")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=validationErrors.name pointing="pointing"}}
  </div>
  <div class="field {{if validationErrors.eMail "error" ""}}">
    {{flexberry-field
      value=model.eMail
      label=(t "forms.ember-flexberry-dummy-application-user-edit.eMail-caption")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=validationErrors.eMail pointing="pointing"}}
  </div>
  <div class="field {{if validationErrors.phone1 "error" ""}}">
    {{flexberry-field
      value=model.phone1
      label=(t "forms.ember-flexberry-dummy-application-user-edit.phone1-caption")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=validationErrors.phone1 pointing="pointing"}}
  </div>
  <div class="field {{if validationErrors.phone2 "error" ""}}">
    {{flexberry-field
      value=model.phone2
      label=(t "forms.ember-flexberry-dummy-application-user-edit.phone2-caption")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=validationErrors.phone2 pointing="pointing"}}
  </div>
  <div class="field {{if validationErrors.phone3 "error" ""}}">
    {{flexberry-field
      value=model.phone3
      label=(t "forms.ember-flexberry-dummy-application-user-edit.phone3-caption")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=validationErrors.phone3 pointing="pointing"}}
  </div>
  <div class="field {{if validationErrors.activated "error" ""}}">
    <label>{{t "forms.ember-flexberry-dummy-application-user-edit.activated-caption"}}</label>
    {{flexberry-checkbox
      value=model.activated
      readonly=readonly
    }}
    {{flexberry-validationmessage error=validationErrors.activated pointing="pointing"}}
  </div>
  <div class="field {{if validationErrors.vK "error" ""}}">
    {{flexberry-field
      value=model.vK
      label=(t "forms.ember-flexberry-dummy-application-user-edit.vK-caption")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=validationErrors.vK pointing="pointing"}}
  </div>
  <div class="field {{if validationErrors.facebook "error" ""}}">
    {{flexberry-field
      value=model.facebook
      label=(t "forms.ember-flexberry-dummy-application-user-edit.facebook-caption")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=validationErrors.facebook pointing="pointing"}}
  </div>
  <div class="field {{if validationErrors.twitter "error" ""}}">
    {{flexberry-field
      value=model.twitter
      label=(t "forms.ember-flexberry-dummy-application-user-edit.twitter-caption")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=validationErrors.twitter pointing="pointing"}}
  </div>
  <div class="field {{if validationErrors.birthday "error" ""}}">
    <label>{{t "forms.ember-flexberry-dummy-application-user-edit.birthday-caption"}}</label>
    {{flexberry-datepicker
      value=model.birthday
      readonly=readonly
    }}
    {{flexberry-validationmessage error=validationErrors.birthday pointing="pointing"}}
  </div>
  <div class="field {{if validationErrors.gender "error" ""}}">
    <label>{{t "forms.ember-flexberry-dummy-application-user-edit.gender-caption"}}</label>
    {{flexberry-dropdown
      value=model.gender
      items=(flexberry-enum "ember-flexberry-dummy-gender")
      readonly=readonly
      direction="upward"
    }}
    {{flexberry-validationmessage error=validationErrors.gender pointing="pointing"}}
  </div>
  <div class="field {{if validationErrors.vip "error" ""}}">
    <label>{{t "forms.ember-flexberry-dummy-application-user-edit.vip-caption"}}</label>
    {{flexberry-checkbox
      value=model.vip
      readonly=readonly
    }}
    {{flexberry-validationmessage error=validationErrors.vip pointing="pointing"}}
  </div>
  <div class="field {{if validationErrors.karma "error" ""}}">
    {{flexberry-field
      value=model.karma
      label=(t "forms.ember-flexberry-dummy-application-user-edit.karma-caption")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=validationErrors.karma pointing="pointing"}}
  </div>
</form>
