<h3 class="ui header">{{t "forms.ember-flexberry-dummy-toggler-example-master-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    {{flexberry-edit-panel
      showCloseButton=true
      deepMount=true
      buttons=(array
        (hash
          type="submit"
          class="save-button"
          disabled=(and hasParentRoute (not saveBeforeRouteLeave))
          text=(t "forms.edit-form.save-button-text")
          action="save")
        (hash
          type="submit"
          class="save-del-button"
          disabled=(and model.isNew (or (not hasParentRoute) (and hasParentRoute saveBeforeRouteLeave)))
          text=(t "forms.edit-form.delete-button-text")
          action="delete"
        ))
    }}
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
  <label>{{t "forms.ember-flexberry-dummy-toggler-example-master-e.toggler-example-master-property-caption"}}</label>
  {{
    flexberry-field
    placeholder=(t "components.flexberry-field.placeholder")
    readonly=readonly
    required=true
    value=model.togglerExampleMasterProperty
  }}
  {{flexberry-validationmessage error=(v-get validationObject "togglerExampleMasterProperty" "messages")}}
</div>
{{#flexberry-toggler}}
  <div class="field">
    <label>{{t "forms.ember-flexberry-dummy-toggler-example-master-e.toggler-example-deteil-property-caption"}}</label>
    {{flexberry-groupedit
      componentName="togglerExampleDetailGroupEdit"
      content=model.togglerExampleDetail
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.togglerExampleDetail
      orderable=true
      readonly=readonly
    }}
  </div>
{{/flexberry-toggler}}
</form>