  <div class="field {{if model.errors.files "error" ""}}">
    <label>{{t "forms.ember-flexberry-dummy-suggestion-edit.files-caption"}}</label>
    {{flexberry-groupedit
      componentName="filesGroupEdit"
      content=model.files
      mainModelProjection=modelProjection
