{{#ui-sidebar class="inverted vertical menu"}}
  <div class="header item">
    <a class="brand" href="#">Flexberry prototype written in Ember.js</a>
  </div>
  <a {{action 'openDevCommit'}}
       id="app-version"
       class="item"
       title="It is version of ember-flexberry addon, which uses in this dummy application (npm version + commit sha). Click to open commit on GitHub."
       target="_blank">
      Версия {{app-version}}
  </a>
  {{render "sitemap" sitemap}}
{{/ui-sidebar}}
<div id="example-mobile" class="pusher">
  <div class="full height">
    <div class="ui top fixed inverted menu">
      <a {{ action 'toggleSidebar' }} class="launch icon item"><i class="sidebar icon"></i></a>
      <div class="right menu">
      </div>
    </div>
    <div class="flexberry-content ui attached segment">
      {{outlet}}
      {{outlet 'modal'}}
    </div>
  </div>
</div>
