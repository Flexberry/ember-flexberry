{{#if sidepageCommentsIsOpen}}
{{#modal-dialog
    title=(t "forms.ember-flexberry-dummy-suggestion-edit.comments-caption")
    useSidePageMode=true
    useOkButton=false
    useCloseButton=false
    close=(action "closeSidepageComments")
}}
{{flexberry-groupedit
      componentName="suggestionCommentsGroupEdit"
      content=model.comments
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.comments
      rowClickable=true
      rowClick="rowClick"
      editOnSeparateRoute=true
      editFormRoute=commentsEditRoute
      saveBeforeRouteLeave=true
      orderable=true
      readonly=readonly
}}
{{/modal-dialog}}
{{/if}}