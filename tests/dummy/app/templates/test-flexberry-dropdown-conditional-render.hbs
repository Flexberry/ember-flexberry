<h3 class="ui header">{{title}}</h3>
<form class="ui form" role="form">
  <div class="form-group field">
    <div class="ui two wide column right aligned  middle aligned content">
      <label>Enumeration</label>
    </div>
    <div>
      {{#if model.enumeration}}
        <span>{{model.enumeration}}</span>
      {{else}}
        {{flexberry-dropdown
          items=(enum-captions 'test-enumeration')
          value=model.enumeration
        }}
      {{/if}}
    </div>
  </div>
</form>
